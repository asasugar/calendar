.component-common-calendar {
  background-color: #fff;
}

.component-common-calendar .title {
  font-size: 40rpx;
  color: #333;
  padding: 30rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.component-common-calendar .title .title-name {
  display: flex;
  align-items: center;
}

.component-common-calendar .title .title-open {
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  color: #999;
  font-size: 22rpx;
  line-height: 36rpx;
  border-radius: 18rpx;
  padding: 0 14rpx;

}

.component-common-calendar .title .year-month {
  margin-right: 20rpx;
}

.component-common-calendar .title .icon {
  padding: 0 16rpx;
  font-size: 32rpx;
  color: #999;
}

.component-common-calendar .calendar-week {
  display: flex;
  line-height: 40rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #999;
}

.component-common-calendar .calendar-week .view {
  width: 100rpx;
  text-align: center;
}

.component-common-calendar .calendar-main {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx 25rpx;
  transition: height 0.3s;
  align-content: flex-start;
  overflow: hidden;
}

.component-common-calendar .calendar-main .day {
  position: relative;
  width: 100rpx;
  color: #666;
  text-align: center;
  height: 72rpx;
}

.component-common-calendar .calendar-main .day .bg {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.component-common-calendar .calendar-main .day .select {
  width: 56rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  background: linear-gradient(-60deg, #0FDAC5, #1BC7B0);
  box-shadow: 0px 5px 16px 0px #C6F3ED;
  margin: 0 auto;
}

.component-common-calendar .calendar-main .day .other-month {
  color: #ccc;
}

.component-common-calendar .calendar-main .day .spot {
  width: 8rpx;
  height: 8rpx;
  background-color: #1DCDB8;
  border-radius: 50%;
  margin: 6rpx auto 0;
}